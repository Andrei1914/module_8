2023/12/03 00:00|Домашнее задание по теме "Итераторы"

class StepValueError(Exception):
    def __init__(self, message):
        self.message = message

class Iterator(StepValueError):
    def __init__(self, start, stop, step=1):
        self.start = start
        self.stop = stop
        self.step = step
        if step == 0:
            raise StepValueError('шаг не может быть равен 0')

    def __iter__(self):
        self.pointed = self.start
        return self

    def __next__(self):
        if self.pointed > self.stop and self.stop > 0 or self.pointed < self.stop and self.stop < 0:
            raise StopIteration()
        else:
            self.pointed += self.step
            return self.pointed
try:
    iter1 = Iterator(100, 200, 0)
    for i in iter1:
        print(i, end=' ')
except StepValueError:
    print('Шаг указан неверно')

iter2 = Iterator(-5, 1)
iter3 = Iterator(6, 15, 2)
iter4 = Iterator(5, 1, -1)
iter5 = Iterator(10, 1)

for i in iter2:
    print(i, end=' ')
    print()
for i in iter3:
    print(i, end=' ')
    print()
for i in iter4:
    print(i, end=' ')
    print()
for i in iter5:
    print(i, end=' ')
    print()
